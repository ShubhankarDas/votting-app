<div id="donate-modal" class="donate-wrapper hide">
  <div class="card">
    <div class="card-body">
      <h3 class="card-title">Donate</h3>
      <div class="card-text">
        <input
          type="number"
          class="form-control form-control-sm"
          id="amount"
          name="amount"
          aria-describedby="amount"
          placeholder="Etherium amount"
        />
        <button id="pay" class="btn btn-primary btn-block" disabled>
          Pay
        </button>
        <p id="message" class="card-title hide"></p>
      </div>
    </div>
  </div>
</div>
